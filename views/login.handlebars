<h2>Login</h2>
{{> messages}}
<form action="/user/login" method="POST">
<section>
<label for="username">Username</label>
<input type="text" class="form-control" value="{{username}}" placeholder="Username" aria-label="Username" name="username" placeholder="Username">
</section>
<section>
	<label for="password">Password</label>
 <input type="password" class="form-control" placeholder="Password" aria-label="Username" name="password" placeholder="Password">
</section>
<section>
 <span><a href="">Forgot Password?</a></span><br>
 <span><a href="">Register?</a></span>
</section>
<section>
 <button type="submit" class="btn btn-primary btn-block">Login</button>
</section>
</form> 